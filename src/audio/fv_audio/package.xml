<?xml version="1.0"?>
<package format="3">
  <name>fv_audio</name>
  <version>0.1.0</version>
  <description>Audio capture and streaming node for FluentVision ROS2.</description>
  <maintainer email="maintainer@example.com">Fluent Robotics</maintainer>
  <license>MIT</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <build_depend>rclcpp</build_depend>
  <build_depend>std_msgs</build_depend>
  <build_depend>std_srvs</build_depend>
  <build_depend>diagnostic_msgs</build_depend>
  <build_depend>builtin_interfaces</build_depend>
  <build_depend>fluent_lib</build_depend>
  <build_depend>rosidl_default_generators</build_depend>

  <exec_depend>rclcpp</exec_depend>
  <exec_depend>rclpy</exec_depend>
  <exec_depend>std_msgs</exec_depend>
  <exec_depend>std_srvs</exec_depend>
  <exec_depend>diagnostic_msgs</exec_depend>
  <exec_depend>builtin_interfaces</exec_depend>
  <exec_depend>fluent_lib</exec_depend>
  <exec_depend>rosidl_default_runtime</exec_depend>

  <depend>pkg-config</depend>
  <depend>libasound2-dev</depend>

  <member_of_group>rosidl_interface_packages</member_of_group>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
